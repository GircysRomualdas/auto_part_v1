<div>
  <h2>Manage Customers</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Address</th>
        <th>Email</th>
        <th>Created</th>
        <th>Updated</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.username %></td>
          <td><%= customer.address %></td>
          <td><%= customer.email %></td>
          <td><%= customer.created_at %></td>
          <td><%= customer.updated_at %></td>
          <td>
            <%= button_to "Delete", manage_customer_path(customer), class: "btn btn-danger", method: :delete, data: {turbo_confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
